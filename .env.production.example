# Production Environment Variables for ORDER MANAGER
# Copy this file to .env.production and fill in the values

# Application Environment
NODE_ENV=production
APP_URL=https://app.order-manager.tech-citizen.me

# Gateway Configuration
GATEWAY_PORT=3000
CORS_ORIGIN=https://app.order-manager.tech-citizen.me,https://tech-citizen.me

# Database Configuration
DATABASE_URL=postgresql://admin:${POSTGRES_PASSWORD}@postgres:5432/order_manager
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis Configuration  
REDIS_URL=redis://redis:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:${RABBITMQ_PASSWORD}@rabbitmq:5672
RABBITMQ_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_MIN_256_BITS
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Domain Configuration
PRIMARY_DOMAIN=tech-citizen.me
API_DOMAIN=api.order-manager.tech-citizen.me
APP_DOMAIN=app.order-manager.tech-citizen.me
DEV_DOMAIN=dev.order-manager.tech-citizen.me