  "workspaces": [
    "gateway",
    "frontend/components",
    "frontend/dashboard",
    "shared/types"
  ],
  "devDependencies": {
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=10.0.0"
  }
}