{
  "name": "order-manager",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev:gateway & npm run dev:components",
    "dev:gateway": "npm run dev --workspace=gateway",
    "dev:components": "echo 'Components not ready yet'",
    "setup": "bash scripts/setup.sh",
